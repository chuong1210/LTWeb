@model IEnumerable<LTWeb_TBDT.Data.HoaDon>

<div class="container my-5">
    <h2 class="mb-4 text-center text-primary">Lịch sử mua hàng</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">Hiện không có đơn hàng nào.</div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <thead class="table-dark">
                    <tr class="text-center">
                        <th>Ngày đặt hàng</th>
                        <th>Tổng tiền</th>
                        <th>Trạng thái</th>
                        <th>Chi tiết</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        <tr>
                            <td class="text-center">@order.NgayDatHang.ToString("dd/MM/yyyy")</td>
                            <td class="text-end text-success">@String.Format(new System.Globalization.CultureInfo("vi-VN"), "{0:C0}", order.TongTien)</td>
                            <td class="text-center">
                                <span class="badge @GetBadgeClass(order.TrangThai)">@order.TrangThai</span>
                            </td>
                            <td class="text-center">
                                <a href="@Url.Action("Detail", "Cart", new { id = order.MaHoaDon })"
                                   class="btn btn-info btn-sm">
                                    <i class="fas fa-info-circle"></i> Xem chi tiết
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@functions {
    private string GetBadgeClass(string status)
    {
        return status switch
        {
            "Đã thanh toán" => "bg-success",
            "Đang xử lý" => "bg-warning text-dark",
            "Hủy" => "bg-danger",
            _ => "bg-secondary"
        };
    }
}