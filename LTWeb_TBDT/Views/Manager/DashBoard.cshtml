<style>
    #main {
        text-align: center;
        padding: 20px;
        background-color: #f5f5f5; /* Màu nền nhạt */
    }

    #main h1 {
        font-size: 2.5em;
        color: #333;
        margin-bottom: 20px;
    }

    /* Flexbox cho các item */
    .tiles {
        display: flex;
        flex-wrap: wrap;
        gap: 20px; /* Khoảng cách giữa các thẻ */
        justify-content: center; /* Căn giữa các thẻ */
    }

    .tiles .style1 {
        flex: 1 1 calc(33.33% - 20px);
        max-width: 300px;
        background-color: #fff;
        border-radius: 10px; /* Bo tròn góc */
        overflow: hidden; /* Đảm bảo các phần tử con không tràn ra ngoài */
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1); /* Đổ bóng */
        transition: transform 0.3s, box-shadow 0.3s; /* Hiệu ứng chuyển động mượt */
        text-align: center;
    }

    /* Hiệu ứng khi di chuột vào thẻ */
    .tiles .style1:hover {
        transform: translateY(-10px); /* Di chuyển thẻ lên một chút */
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2); /* Tăng đổ bóng */
    }

    .tiles .style1 .image img {
        width: 100%;
        height: 200px;
        object-fit: cover; /* Đảm bảo hình ảnh luôn vừa khung */
        border-bottom: 1px solid #ddd;
    }

    .tiles .style1 a {
        display: block;
        padding: 20px;
        text-decoration: none;
        color: #444;
        font-size: 1.5em;
        font-weight: bold;
        transition: color 0.3s;
    }

    .tiles .style1 a:hover {
        color: #ff6f61; /* Đổi màu khi di chuột */
    }


</style>

<div id="main">
    <h1>Manager</h1>
    <section class="tiles">
        <article class="style1">
            <span class="image">
                <img src="~/images/SP008.jpg" alt="Quản lý sản phẩm" />
            </span>
            <a asp-action="Index" asp-controller="Manager">
                <h2>Quản lý sản phẩm</h2>
            </a>
        </article>

        <article class="style1">
            <span class="image">
                <img src="~/images/SP008.jpg" alt="Quản lý khách hàng" />
            </span>
            <a asp-action="Index" asp-controller="KhachHang">
                <h2>Quản lý khách hàng</h2>
            </a>
        </article>

        @if (this.User.IsInRole("Admin"))
        {
            <article class="style1">
                <span class="image">
                    <img src="~/images/SP008.jpg" alt="Quản lý nhân viên" />
                </span>
                <a asp-action="Index" asp-controller="NhanVien">
                    <h2>Quản lý nhân viên</h2>
                </a>
            </article>

            <article class="style1">
                <span class="image">
                    <img src="~/images/SP008.jpg" alt="Quản lý nhân viên" />
                </span>
                <a asp-action="Index" asp-controller="HoaDon">
                    <h2>Quản lý hóa đơn</h2>
                </a>
            </article>
        }
    </section>
</div>
