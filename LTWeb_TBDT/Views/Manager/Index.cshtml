@model List<LTWeb_TBDT.Models.SanPham>

@{
    ViewData["Title"] = "Danh Sách Sản Phẩm";
}
@if (ViewData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @ViewData["SuccessMessage"]
    </div>
}

<div class="container mt-5">
    <div class="row mb-3">
        <div class="col-12 text-center">
            <h1>@ViewData["Title"]</h1>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-12 d-flex justify-content-between">
            <!-- Nút thêm sản phẩm -->
            <a href="@Url.Action("CreateProduct", "Manager")" class="btn btn-success">Thêm Sản Phẩm</a>
            <!-- Textbox tìm kiếm -->
            <form method="get" class="form-inline">
                <input type="text" name="searchQuery" class="form-control" placeholder="Tìm kiếm..." value="@ViewData["SearchQuery"]" />
                <button type="submit" class="btn btn-primary ml-2">Tìm kiếm</button>
            </form>
        </div>
    </div>

    <!-- Bảng danh sách sản phẩm -->
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Mã sản phẩm</th>
                <th>Tên sản phẩm</th>
                <th>Mô tả</th>
                <th>Giá bán</th>
                <th>Số lượng tồn</th>
                <th>Hình ảnh</th>
                <th>Mã nhà sản xuất</th>
                <th>Mã danh mục</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.MaSP</td>
                    <td>@item.TenSP</td>
                    <td>@item.MoTa</td>
                    <td>@item.GiaBan</td>
                    <td>@item.SoLuongTon</td>
                    <td><img src="~/images/@item.HinhAnh" alt="@item.TenSP" style="width: 100px;" /></td>
                    <td>@item.MaNSX</td>
                    <td>@item.MaDanhMuc</td>
                    <td class="d-flex justify-content-start">
                        <!-- Nút sửa -->
                        <a href="@Url.Action("Edit", "SanPham", new { id = item.MaSP })" class="btn btn-warning btn-sm mr-2">Sửa</a>

                        <!-- Nút xóa -->
                        <a href="@Url.Action("Delete", "SanPham", new { id = item.MaSP })" class="btn btn-danger btn-sm" onclick="return confirm('Bạn có chắc chắn muốn xóa sản phẩm này?')">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
