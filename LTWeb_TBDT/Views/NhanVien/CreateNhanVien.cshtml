@model LTWeb_TBDT.Models.NhanVien

@{
    ViewData["Title"] = "Thêm Nhân Viên";
}

<div class="container mt-5">
    <h1 class="text-center text-primary">@ViewData["Title"]</h1>

    <form method="post" class="p-4 border rounded bg-light shadow-sm">
        <div class="form-group mb-3">
            <label for="HoTen" class="form-label">Họ Tên</label>
            <input type="text" id="HoTen" name="HoTen" class="form-control" placeholder="Nhập họ tên nhân viên" required />
        </div>

        <div class="form-group mb-3">
            <label for="NgaySinh" class="form-label">Ngày Sinh</label>
            <input type="date" id="NgaySinh" name="NgaySinh" class="form-control" required />
        </div>

        <div class="form-group mb-3">
            <label for="SoDienThoai" class="form-label">Số Điện Thoại</label>
            <input type="text" id="SoDienThoai" name="SoDienThoai" class="form-control" placeholder="Nhập số điện thoại nhân viên" required />
        </div>

        <div class="form-group mb-3">
            <label for="Email" class="form-label">Email</label>
            <input type="email" id="Email" name="Email" class="form-control" placeholder="Nhập email nhân viên" required />
        </div>

        <div class="form-group mb-3">
            <label for="MaTaiKhoan" class="form-label">Mã Tài Khoản</label>
            <input type="number" id="MaTaiKhoan" name="MaTaiKhoan" class="form-control" placeholder="Nhập mã tài khoản" required />
        </div>

        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-success px-4">
                <i class="fa fa-save"></i> Lưu Nhân Viên
            </button>
            <a href="@Url.Action("Index", "NhanVien")" class="btn btn-secondary px-4">
                <i class="fa fa-arrow-left"></i> Quay lại
            </a>
        </div>
    </form>
</div>
