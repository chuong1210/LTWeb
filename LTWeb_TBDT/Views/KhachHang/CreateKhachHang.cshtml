@model LTWeb_TBDT.Models.KhachHang

@{
    ViewData["Title"] = "Thêm Khách Hàng";
}

<div class="container mt-5">
    <h1 class="text-center text-primary">@ViewData["Title"]</h1>

    <form method="post" class="p-4 border rounded bg-light shadow-sm">
        <div class="form-group mb-3">
            <label for="HoTen" class="form-label">Họ Tên</label>
            <input type="text" id="HoTen" name="HoTen" class="form-control" placeholder="Nhập họ tên khách hàng" required />
        </div>

        <div class="form-group mb-3">
            <label for="DiaChi" class="form-label">Địa Chỉ</label>
            <input type="text" id="DiaChi" name="DiaChi" class="form-control" placeholder="Nhập địa chỉ khách hàng" required />
        </div>

        <div class="form-group mb-3">
            <label for="SoDienThoai" class="form-label">Số Điện Thoại</label>
            <input type="text" id="SoDienThoai" name="SoDienThoai" class="form-control" placeholder="Nhập số điện thoại khách hàng" required />
        </div>

        <div class="form-group mb-3">
            <label for="Email" class="form-label">Email</label>
            <input type="email" id="Email" name="Email" class="form-control" placeholder="Nhập email khách hàng" required />
        </div>

        <div class="form-group mb-3">
            <label for="MaTaiKhoan" class="form-label">Mã Tài Khoản</label>
            <select id="MaTaiKhoan" name="MaTaiKhoan" class="form-control" required>
                <option value="">-- Chọn mã tài khoản --</option>
                @foreach (var item in ViewBag.TaiKhoanList)
                {
                    <option value="@item.Value">@item.Text</option>
                }
            </select>
        </div>


        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-success px-4">
                <i class="fa fa-save"></i> Lưu Khách Hàng
            </button>
            <a href="@Url.Action("Index", "KhachHang")" class="btn btn-secondary px-4">
                <i class="fa fa-arrow-left"></i> Quay lại
            </a>
        </div>
    </form>
</div>
