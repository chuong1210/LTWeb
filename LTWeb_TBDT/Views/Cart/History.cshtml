@model IEnumerable<LTWeb_TBDT.Data.HoaDon>

<h2>Lịch sử mua hàng</h2>

@if (!Model.Any())
{
    <p>Bạn không có đơn hàng nào.</p>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Ngày đặt hàng</th>
                <th>Tổng tiền</th>
                <th>Trạng thái</th>
                <th>Chi tiết</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.NgayDatHang.ToString("dd/MM/yyyy")</td>
                    <td>@String.Format(new System.Globalization.CultureInfo("vi-VN"), "{0:C0}", order.TongTien)</td> <!-- Hiển thị VNĐ -->
                    <td>@order.TrangThai</td>
                    <td>
                        <a href="@Url.Action("Detail", "Cart", new { id = order.MaHoaDon })">Xem chi tiết</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
