@using LTWeb_TBDT.Data;
@model List<LTWeb_TBDT.Data.SanPham>

	<style>
	.productinfo p {
		white-space: nowrap; /* Ngăn chặn xuống dòng */
		overflow: hidden; /* Ẩn phần nội dung vượt quá khung */
		text-overflow: ellipsis; /* Hiển thị dấu "..." nếu nội dung bị cắt */
		max-width: 100%; /* Giới hạn chiều rộng tối đa của thẻ */
	}

	.pagination {
		display: flex;
		justify-content: center; /* Canh giữa theo chiều ngang */
		margin-top: 20px;
	}

		.pagination ul {
			display: flex; /* Sử dụng flexbox để dễ dàng canh giữa */
			padding: 0;
			margin: 0;
			list-style: none;
		}

		.pagination li {
			margin: 0 5px; /* Khoảng cách giữa các mục phân trang */
		}

			.pagination li a {
				color: #555;
				padding: 10px 15px;
				border: 1px solid #ddd;
				text-decoration: none;
				border-radius: 5px;
				transition: background-color 0.3s;
			}

				.pagination li a:hover {
					background-color: #f5f5f5;
				}

		.pagination .active a {
			background-color: #428bca;
			color: #fff;
			border: 1px solid #428bca;
		}


	</style>
